# ─── Server ─────────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=4000
API_PREFIX=/api
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ─── Database (Postgres) ───────────────────────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ipprotect
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ipprotect?schema=public

# ─── Redis (Queues / caching) ──────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─── JWT Auth ──────────────────────────────────────────────────────────────────
JWT_ACCESS_SECRET=replace-with-32+random-chars
JWT_REFRESH_SECRET=replace-with-32+random-chars
JWT_ACCESS_TTL=900s         # 15 minutes
JWT_REFRESH_TTL=30d         # 30 days
PASSWORD_HASH_MEMORY=19456  # Argon2 tuning (optional)
PASSWORD_HASH_TIME=2
PASSWORD_HASH_PARALLELISM=1

# ─── Hedera (Testnet) ──────────────────────────────────────────────────────────
HEDERA_ACCOUNT_ID=
HEDERA_PRIVATE_KEY=
HEDERA_TOPIC_ID=

# ─── IPFS (web3.storage) ───────────────────────────────────────────────────────
WEB3_STORAGE_TOKEN=

# ─── AI (OpenAI or compatible) ─────────────────────────────────────────────────
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# ─── Public Verify URL (used in certificate QR) ────────────────────────────────
PUBLIC_VERIFY_URL=http://localhost:4000/api/public/verify

# ─── Uploads ───────────────────────────────────────────────────────────────────
MAX_UPLOAD_MB=25
ALLOWED_MIME=image/png,image/jpeg,application/pdf,text/plain,audio/mpeg,application/zip
